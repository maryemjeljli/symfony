{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Ajouter un Club</h1>

    
    <div class="card p-4 mb-4">
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.nom, 'Nom du Club', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.date_de_creation, 'Date de Création', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.date_de_creation, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.date_de_creation) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                {{ form_label(form.description, 'Description', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'rows': 3} }) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                {{ form_label(form.type, 'Type de Club', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.type) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success w-100">Ajouter</button>
        {{ form_end(form) }}
    </div>

    {# Tableau des clubs ajoutés #}
    <h2 class="text-center mb-4">Liste des Clubs</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date de Création</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for club in clubs %}
                <tr>
                    <td>{{ club.id }}</td>
                    <td>{{ club.nom }}</td>
                    <td>{{ club.description }}</td>
                    <td>{{ club.DateDeCreation|date('Y-m-d') }}</td>
                    <td>{{ club.type}}</td>
                    <td>
                        <a href="{{ path('club_modify', { id: club.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                        <a href="{{ path('club_delete', { id: club.id }) }}" class="btn btn-danger btn-sm"
                           onclick="return confirm('Voulez-vous vraiment supprimer ce club ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun club ajouté pour l'instant.</td>
                </tr>
            {% endfor %}
        </tbody>
        
    </table>
</div>
<style>
    /* Couleurs principales */
    :root {
        --primary-color: #5a3e92; /* Violet */
        --secondary-color: #3ec6e7; /* Bleu turquoise */
        --background-light: #f9f9fc; /* Couleur de fond légère */
        --text-dark: #333; /* Texte sombre */
    }
    
    /* Conteneur principal centré */
    .container {
        max-width: 800px; /* Réduction de la largeur */
        margin: 0 auto; /* Centrer horizontalement */
        background-color: var(--background-light);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Titre principal */
    h1, h2 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: var(--primary-color);
        text-align: center;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        margin-bottom: 1.5rem;
    }
    
    /* Carte de formulaire */
    .card {
        border: 2px solid var(--primary-color);
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Labels du formulaire */
    .form-label {
        font-weight: bold;
        color: var(--primary-color);
    }
    
    /* Champs de formulaire */
    .form-control {
        border: 2px solid var(--secondary-color);
        border-radius: 25px;
        padding: 10px;
        transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        outline: none;
        box-shadow: 0 0 5px var(--primary-color);
    }
    
    /* Bouton principal */
    .btn-success {
        background-color: var(--primary-color);
        color: #ffffff;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
    }
    
    .btn-success:hover {
        background-color: var(--secondary-color);
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }
    
    /* Tableau des clubs */
    .table {
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid var(--primary-color);
    }
    
    .table thead {
        background-color: var(--primary-color);
        color: #ffffff;
    }
    
    .table tbody tr:nth-child(even) {
        background-color: var(--background-light);
    }
    
    .table tbody tr:hover {
        background-color: var(--secondary-color);
        color: #ffffff;
    }
    
    .table td, .table th {
        text-align: center;
        vertical-align: middle;
    }
    
    /* Boutons dans le tableau */
    .btn-primary {
        background-color: var(--secondary-color);
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }
    
    .btn-primary:hover {
        background-color: var(--primary-color);
    }
    
    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }
    
    .btn-danger:hover {
        background-color: #c0392b;
    }
    
</style>

