{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Modifier un Club</h1>

    <div class="form-container">
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.nom, 'Nom du Club', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.date_de_creation, 'Date de Création', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date_de_creation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date_de_creation) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.type, 'Type de Club', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>
        <button type="submit" class="btn btn-success w-100">Enregistrer les modifications</button>
        {{ form_end(form) }}
    </div>
</div>

