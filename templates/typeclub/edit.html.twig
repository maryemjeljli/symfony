{% block body %}
<div class="container mt-5">
    <!-- Titre principal -->
    <h2 class="custom-title text-center mb-4">Modifier le Type de Club</h2>

    <!-- Formulaire de modification -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-card">
                <div class="custom-card-body">
                    <!-- Début du formulaire -->
                    {{ form_start(form) }}

                    <div class="form-group mb-4">
                        {{ form_label(form.libelle, 'Libellé', {'label_attr': {'class': 'custom-label'}}) }}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control custom-input'}}) }}
                        {{ form_errors(form.libelle) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn custom-btn">
                            Enregistrer les modifications
                        </button>
                    </div>

                    <!-- Fin du formulaire -->
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
