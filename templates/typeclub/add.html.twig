{% block body %}
<div class="container mt-5 custom-container">
    <!-- Titre principal -->
    <div class="custom-title">Ajouter un Type de Club</div>

    <!-- Ajouter un type de club -->
    <div class="card custom-card mb-5">
        <div class="card-header custom-card-header">
            Ajouter un Type de Club
        </div>
        <div class="card-body custom-card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Liste des types de clubs -->
    <div class="custom-container">
        <!-- Titre principal -->
        <div class="custom-title">Liste des Types de Clubs</div>
    
        <!-- Tableau des types de clubs -->
        <table class="custom-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Libellé</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for typeclub in types %}
                    <tr>
                        <td>{{ typeclub.id }}</td>
                        <td>{{ typeclub.libelle }}</td>
                        <td>
                            <a href="{{ path('typeclub_edit', { id: typeclub.id }) }}" class="btn btn-edit">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            <a href="{{ path('typeclub_delete', { id: typeclub.id }) }}" class="btn btn-delete" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce type de club ?');">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="empty-message">Aucun type de club trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

