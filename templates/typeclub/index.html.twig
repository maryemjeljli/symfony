{% extends 'base.html.twig' %}

{% block title %}Liste des Types de Club{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des Types de Club</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libell√©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for typeclub in types %}
            <tr>
                <td>{{ typeclub.id }}</td>
                <td>{{ typeclub.libelle }}</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('typeclub_edit', { id: typeclub.id }) }}" class="btn btn-warning btn-sm mx-2" title="Modifier">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <a href="{{ path('typeclub_delete', { id: typeclub.id }) }}" class="btn btn-danger btn-sm mx-2" title="Supprimer"
                           onclick="return confirm('Voulez-vous vraiment supprimer ce type de club ?');">
                            <i class="bi bi-trash"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

